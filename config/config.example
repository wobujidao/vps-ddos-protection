# Конфигурация VPS Protection
# ВАЖНО: chmod 600 /etc/vps-protection/config

# Telegram настройки
TELEGRAM_BOT_TOKEN="1234567890:sdfkjghsdkjfghsdkjfghdsfkjhg"
TELEGRAM_CHAT_ID="-1234567890"
SERVER_NAME="vps.myvps.com"

# Пороги защиты (пакетов в секунду)
TS_RATE_LIMIT=50
WG_RATE_LIMIT=200

# Время блокировки в секундах (30 минут)
BLOCK_TIME=1800

# Порог для алерта (пакетов)
ALERT_THRESHOLD=100

# Интервал между алертами (секунд)
ALERT_COOLDOWN=300

# Включить гео-локацию IP
ENABLE_GEO=true
